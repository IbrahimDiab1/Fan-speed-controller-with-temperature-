#ifndef DC_MOTOR_H_
#define DC_MOTOR_H_

#include "std_types.h"

#define DC_MOTOR_IN1_PORT_ID
#define DC_MOTOR_IN1_PIN_NUM

#define DC_MOTOR_IN2_PORT_ID
#define DC_MOTOR_IN2_PIN_NUM

#define DC_MOTOR_EN1_PORT_ID
#define DC_MOTOR_EN1_PIN_NUM



#define DC_MOTOR_IN3_PORT_ID
#define DC_MOTOR_IN3_PIN_NUM

#define DC_MOTOR_IN4_PORT_ID
#define DC_MOTOR_IN4_PIN_NUM

#define DC_MOTOR_EN2_PORT_ID
#define DC_MOTOR_EN2_PIN_NUM


typedef enum{
CW , A_CW
}DcMotor_State;

void DcMotor_Init(void);

void DcMotor_Rotate(DcMotor_State state,uint8 speed);


#endif /* DC_MOTOR_H_ */
